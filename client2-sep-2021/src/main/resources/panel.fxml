<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.2" fx:controller="PanelController">
    <HBox>
        <ComboBox  fx:id="diskBox" onAction="#selectDiskAction"/>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" />
        <Button onAction="#btnPathUpAction" text="Вверх" />
    </HBox>
    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS" />

    <properties>
        <ctrl><fx:reference source="controller"/></ctrl>
    </properties>
</VBox>
